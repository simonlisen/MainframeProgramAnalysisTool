@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">  
</head>
<body>
    <!--Main canvas-->
    <div id="chart-container">
        <div class="jumbotron">
            <div class="container">
                <h1>Welcome to MPAT </h1>
                <h2>Mainframe Program Analysis Tool</h2>
                <p>This is a simple tool, which is a simple jumbotron-style component for calling extra attention to featured content or information. It could help you xxx whatever...</p>
                <p><a class="btn btn-primary btn-lg" href="#" role="button" data-toggle="modal" data-target="#myModal">Let's go</a></p>
            </div>
        </div>
    </div>   
    <!--  Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        Build new flow
                    </h4>
                </div>
                <div class="modal-body">
                    <input id="ipt_buildnew" class="form-control" type="text" required="required"/>
                </div>
                <div class="modal-footer">                    
                    <button type="button" id="submit-build-new" class="btn btn-primary">
                        <i class="fa fa-check-circle"></i>Build
                    </button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        Cancel
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>

    @*detail modal*@
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailModalLabel">Node Detail</h5>
                </div>
                <div class="modal-body">
                        <div class="form-group">
                            <label for="message-text" class="form-control-label">Rate</label>
                            <input class="form-control detail-field" id="details-rate" readonly="readonly">
                            <label for="message-text" class="form-control-label">Procs</label>
                            <textarea rows="4" cols="200" class="form-control detail-field" id="details-procs" readonly="readonly"></textarea>
                            <label for="message-text" class="form-control-label">Jcls</label>
                            <textarea rows="4" cols="200" class="form-control detail-field" id="details-jcls" readonly="readonly"></textarea>
                            <label for="message-text" class="form-control-label">Description</label>
                            <textarea rows="7" cols="200" class="form-control detail-field" id="details-desc" readonly="readonly"></textarea>
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
    @*detail modal*@
</body>
</html>

